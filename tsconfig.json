{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "lib": ["es7", "dom"],
        "allowJs": true,
        "experimentalDecorators": true
    },
    "include": [
        "./src/**/*"
    ]
}